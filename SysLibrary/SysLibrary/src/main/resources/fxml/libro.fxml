<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<?import javafx.scene.control.Pagination?>
<VBox alignment="TOP_LEFT" spacing="20.0" styleClass="view-container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.syslibrary.controller.LibroController"> <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0" /></padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox>
            <Label text="Gestión de Libros" styleClass="view-title" />
            <Label text="Administra el catálogo de libros" styleClass="view-subtitle" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#handleNewBook" styleClass="primary-action-button-blue">
            <graphic><Glyph fontFamily="FontAwesome" icon="PLUS" /></graphic>
            <text> Nuevo Libro</text>
        </Button>
    </HBox>

    <HBox alignment="CENTER_LEFT" styleClass="search-bar">
        <Glyph fontFamily="FontAwesome" icon="SEARCH" styleClass="search-icon">
            <HBox.margin><Insets right="10.0" /></HBox.margin>
        </Glyph>
        <TextField fx:id="txtSearch"
                   promptText="Buscar por título, autor o ISBN..."
                   onAction="#handleSearch"
                   styleClass="search-field"
                   HBox.hgrow="ALWAYS" />
    </HBox>

    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <TableView fx:id="libroTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colISBN" text="ISBN" prefWidth="120.0" />
                <TableColumn fx:id="colTitulo" text="TÍTULO" prefWidth="250.0" />
                <TableColumn fx:id="colAutor" text="AUTOR" prefWidth="150.0" />
                <TableColumn fx:id="colCategoria" text="CATEGORÍA" prefWidth="120.0" />
                <TableColumn fx:id="colEditorial" text="EDITORIAL" prefWidth="120.0" />
                <TableColumn fx:id="colDisponibles" text="STOCK DISP." prefWidth="100.0" />
                <TableColumn fx:id="colActions" text="ACCIONES" prefWidth="100.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Pagination fx:id="pagination" pageCount="1" />
    </VBox>

</VBox>