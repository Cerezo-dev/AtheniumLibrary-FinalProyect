<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<VBox alignment="TOP_LEFT" spacing="20.0" styleClass="view-container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.syslibrary.controller.UserController">

    <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0" /></padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox>
            <Label text="GestiÃ³n de Usuarios" styleClass="view-title" />
            <Label text="Administra usuarios del sistema" styleClass="view-subtitle" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#handleNewUser" styleClass="primary-action-button-blue">
            <graphic><Glyph fontFamily="FontAwesome" icon="PLUS" /></graphic>
            <text> Nuevo Usuario</text>
        </Button>
    </HBox>

    <HBox alignment="CENTER_LEFT" styleClass="search-bar">
        <Glyph fontFamily="FontAwesome" icon="SEARCH" styleClass="search-icon">
            <HBox.margin><Insets right="10.0" /></HBox.margin>
        </Glyph>
        <TextField fx:id="txtSearch" promptText="Buscar por nombre o email..." styleClass="search-field" HBox.hgrow="ALWAYS" />
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="transparent-scrollpane">
        <FlowPane fx:id="usersContainer" hgap="20.0" vgap="20.0" alignment="TOP_LEFT">
            <VBox styleClass="user-card" prefWidth="320.0" maxWidth="320.0">
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Glyph fontFamily="FontAwesome" icon="USER" styleClass="card-user-icon-green" />
                    <VBox>
                        <Label text="Administrador del Sistema" styleClass="card-user-name" />
                        <Label text="admin@biblioteca.edu" styleClass="card-user-email" />
                    </VBox>
                </HBox>

                <Label text="Administrador" styleClass="card-tag-blue">
                    <VBox.margin><Insets top="10.0" bottom="5.0" /></VBox.margin>
                </Label>

                <Label text="Tel: 555-0000" styleClass="card-user-detail" />

                <Region VBox.vgrow="ALWAYS" minHeight="15.0" />

                <HBox spacing="10.0" alignment="CENTER">
                    <Button text="Editar" styleClass="secondary-button-light" HBox.hgrow="ALWAYS" />
                    <Button text="Eliminar" styleClass="danger-button-light" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>

        </FlowPane>
    </ScrollPane>
</VBox>