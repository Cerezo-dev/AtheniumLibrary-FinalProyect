<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.glyphfont.*?>

<VBox spacing="20.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.syslibrary.controller.CategoryController">

    <padding><Insets bottom="20.0" left="30.0" right="30.0" top="20.0" /></padding>

    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <VBox>
            <Label styleClass="page-title" text="Gestión de Categorías" />
            <Label styleClass="page-subtitle" text="Administra la clasificación de tu biblioteca" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleNewCategory" styleClass="primary-button">
            <graphic><Glyph fontFamily="FontAwesome" icon="PLUS" /></graphic>
            <text> Nueva Categoría</text>
        </Button>
    </HBox>

    <VBox spacing="15.0" styleClass="content-card" VBox.vgrow="ALWAYS">

        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="toolbar-container">
            <HBox alignment="CENTER_LEFT" styleClass="search-bar-container" HBox.hgrow="ALWAYS">
                <Glyph fontFamily="FontAwesome" icon="SEARCH" styleClass="search-icon" />
                <TextField fx:id="txtBuscar" promptText="Buscar categoría..." style="-fx-background-color: transparent; -fx-prompt-text-fill: #aaa; -fx-text-fill: #333;" HBox.hgrow="ALWAYS" />
            </HBox>

            <ComboBox fx:id="cmbOrden" prefWidth="180.0" promptText="Ordenar por..." styleClass="combo-box-base" />
        </HBox>

        <ScrollPane fitToWidth="true" styleClass="transparent-scrollpane" VBox.vgrow="ALWAYS">
            <FlowPane fx:id="categoriesContainer" alignment="TOP_LEFT" hgap="20.0" vgap="20.0">
            </FlowPane>
         <padding>
            <Insets bottom="15.0" left="15.0" right="30.0" top="15.0" />
         </padding>
        </ScrollPane>

        <HBox alignment="CENTER" spacing="10.0" styleClass="pagination-bar">
            <Button fx:id="btnPrev" onAction="#handlePrevPage" styleClass="pagination-button">
                <graphic><Glyph fontFamily="FontAwesome" icon="CHEVRON_LEFT" /></graphic>
            </Button>

            <Label fx:id="lblPaginacion" styleClass="pagination-label" text="Página 1 de 1" />

            <Button fx:id="btnNext" onAction="#handleNextPage" styleClass="pagination-button">
                <graphic><Glyph fontFamily="FontAwesome" icon="CHEVRON_RIGHT" /></graphic>
            </Button>
        </HBox>
    </VBox>

</VBox>
