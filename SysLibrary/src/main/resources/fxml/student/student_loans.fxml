    <?xml version="1.0" encoding="UTF-8"?>

    <?import javafx.geometry.Insets?>
    <?import javafx.scene.control.Label?>
    <?import javafx.scene.control.TableColumn?>
    <?import javafx.scene.control.TableView?>
    <?import javafx.scene.layout.VBox?>
    <?import org.controlsfx.glyphfont.Glyph?>

    <VBox spacing="20.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.syslibrary.controller.student.StudentLoansController">

        <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
        </padding>

        <VBox spacing="5.0">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Mis Préstamos" />
            <Label style="-fx-text-fill: #7f8c8d;" text="Historial de libros solicitados y devoluciones pendientes." />
        </VBox>

        <TableView fx:id="tblPrestamos" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colLibro" text="Libro" prefWidth="300.0" />
                <TableColumn fx:id="colFechaPrestamo" text="Fecha Préstamo" prefWidth="150.0" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="colFechaDevolucion" text="Vencimiento" prefWidth="150.0" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="120.0" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="colMulta" text="Sanción" prefWidth="100.0" style="-fx-alignment: CENTER_RIGHT;" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <placeholder>
                <Label text="No tienes préstamos registrados actualmente." />
            </placeholder>
        </TableView>

    </VBox>