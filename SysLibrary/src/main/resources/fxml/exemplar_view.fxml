<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<VBox alignment="TOP_LEFT" spacing="20.0" styleClass="view-container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.syslibrary.controller.ExemplarController">

    <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0" /></padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox>
            <Label text="Gestión de Ejemplares" styleClass="view-title" />
            <Label text="Copias físicas de los libros" styleClass="view-subtitle" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#handleNewExemplar" styleClass="primary-action-button">
            <graphic><Glyph fontFamily="FontAwesome" icon="PLUS" /></graphic>
            <text> Nuevo Ejemplar</text>
        </Button>
    </HBox>

    <HBox alignment="CENTER_LEFT" styleClass="search-bar">
        <Glyph fontFamily="FontAwesome" icon="SEARCH" styleClass="search-icon">
            <HBox.margin><Insets right="10.0" /></HBox.margin>
        </Glyph>
        <TextField fx:id="txtSearch" promptText="Buscar por código o título..." styleClass="search-field" HBox.hgrow="ALWAYS" />
    </HBox>

    <AnchorPane VBox.vgrow="ALWAYS">
        <TableView fx:id="exemplarTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columns>
                <TableColumn fx:id="colCode" text="CÓDIGO" prefWidth="120.0" />

                <TableColumn fx:id="colBook" text="LIBRO" prefWidth="350.0" />

                <TableColumn fx:id="colStatus" text="ESTADO" prefWidth="120.0" />

                <TableColumn fx:id="colLocation" text="UBICACIÓN" prefWidth="150.0" />

                <TableColumn fx:id="colActions" text="ACCIONES" prefWidth="100.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </AnchorPane>
</VBox>