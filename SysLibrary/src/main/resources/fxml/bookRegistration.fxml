<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="750.0" prefWidth="900.0" style="-fx-background-color: white;" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.syslibrary.controller.BookRegistrationController">

    <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: white;">

        <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
        </padding>

        <VBox maxWidth="850.0" spacing="20.0" VBox.vgrow="ALWAYS">

            <Label styleClass="dialog-title" text="Registro de Libro">
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </Label>

            <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #f0f8ff; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Autocompletar con Google Books:" style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                <TextField fx:id="txtBusquedaGoogle" promptText="Escribe ISBN o Título del libro..." HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#handleSearchISBN" style="-fx-background-color: #4285F4; -fx-text-fill: white; -fx-cursor: hand;">
                    <graphic><Glyph fontFamily="FontAwesome" icon="GOOGLE" /></graphic>
                    <tooltip><Tooltip text="Buscar y rellenar datos automáticamente" /></tooltip>
                </Button>
            </HBox>

            <GridPane hgap="30.0" vgap="20.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                </columnConstraints>

                <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label styleClass="form-label" text="Título *" />
                    <TextField fx:id="txtTitulo" promptText="Título completo del libro" styleClass="form-field" />
                </VBox>
                <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label styleClass="form-label" text="Autor *" />
                    <TextField fx:id="txtAutor" promptText="Nombre del autor" styleClass="form-field" />
                </VBox>

                <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label styleClass="form-label" text="ISBN" />
                    <TextField fx:id="txtIsbn" promptText="978-XXXX-XXXX" styleClass="form-field" />
                </VBox>
                <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label styleClass="form-label" text="Categoría *" />
                    <ComboBox fx:id="cmbCategoria" maxWidth="Infinity" promptText="Seleccionar categoría" styleClass="form-field" />
                </VBox>

                <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label styleClass="form-label" text="Año" />
                    <TextField fx:id="txtAnio" promptText="Ej. 2023" styleClass="form-field" />
                </VBox>
                <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Label styleClass="form-label" text="Editorial" />
                    <TextField fx:id="txtEditorial" promptText="Nombre de la editorial" styleClass="form-field" />
                </VBox>

                <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label styleClass="form-label" text="Cantidad Total *" />
                    <TextField fx:id="txtCantidad" text="1" styleClass="form-field" />
                </VBox>
                <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <Label styleClass="form-label" text="Ubicación *" />
                    <TextField fx:id="txtUbicacion" promptText="Ej: Estante A-1" styleClass="form-field" />
                </VBox>

                <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <Label styleClass="form-label" text="URL Portada (Automático)" />
                    <TextField fx:id="txtUrlPortada" promptText="http://..." styleClass="form-field" editable="true"/>
                </VBox>

                <VBox spacing="8.0" GridPane.columnSpan="2" GridPane.rowIndex="5">
                    <Label styleClass="form-label" text="Descripción" />
                    <TextArea fx:id="txtDescripcion" prefHeight="100.0" prefRowCount="4" promptText="Sinopsis del libro" styleClass="form-field" wrapText="true" />
                </VBox>

            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="15.0" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets top="30.0" />
                </VBox.margin>
                <Button onAction="#handleCancelar" styleClass="secondary-button-light" text="Cancelar" />
                <Button onAction="#handleGuardar" styleClass="primary-button" text="Guardar Libro" />
            </HBox>

        </VBox>
    </VBox>
</ScrollPane>