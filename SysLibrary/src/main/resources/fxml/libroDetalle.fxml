<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<VBox spacing="20.0" style="-fx-background-color: white;" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.syslibrary.controller.LibroDetalleController">
    <padding>
        <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
    </padding>

    <HBox alignment="CENTER_LEFT">
        <Label styleClass="dialog-title" text="Vista Rápida" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleCerrar" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <Glyph fontFamily="FontAwesome" icon="CLOSE" style="-fx-font-size: 16px; -fx-text-fill: #999;" />
            </graphic>
        </Button>
    </HBox>

    <HBox spacing="30.0">
        <VBox spacing="15.0">
            <ImageView fx:id="imgPortada" fitHeight="350.0" fitWidth="230.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-background-radius: 10;" />

            <VBox spacing="5.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Disponibilidad" />
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label fx:id="lblDisponibilidadNum" style="-fx-font-size: 24px; -fx-font-weight: 900;" text="2/2" />
                    <Label fx:id="lblDisponibilidadBadge" style="-fx-padding: 5 12; -fx-background-radius: 15; -fx-font-size: 12px; -fx-font-weight: bold;" text="Disponible" />
                </HBox>
            </VBox>
        </VBox>

        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
            <VBox spacing="20.0">
                <VBox spacing="5.0">
                    <Label fx:id="lblTitulo" style="-fx-font-size: 24px; -fx-font-weight: 900; -fx-text-fill: #333;" text="Título del Libro" wrapText="true" />
                    <Label fx:id="lblAutor" style="-fx-font-size: 16px; -fx-text-fill: #777;" text="Nombre del Autor" />
                </VBox>

                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <HBox spacing="10.0" GridPane.columnIndex="0">
                        <Glyph fontFamily="FontAwesome" icon="HASHTAG" style="-fx-text-fill: #999; -fx-font-size: 18px;" />
                        <VBox>
                            <Label style="-fx-text-fill: #777; -fx-font-size: 13px;" text="ISBN" />
                            <Label fx:id="lblISBN" style="-fx-font-weight: bold; -fx-text-fill: #333;" text="978-..." />
                        </VBox>
                    </HBox>
                    <HBox spacing="10.0" GridPane.columnIndex="1">
                        <Glyph fontFamily="FontAwesome" icon="CALENDAR" style="-fx-text-fill: #999; -fx-font-size: 18px;" />
                        <VBox>
                            <Label style="-fx-text-fill: #777; -fx-font-size: 13px;" text="Año" />
                            <Label fx:id="lblAnio" style="-fx-font-weight: bold; -fx-text-fill: #333;" text="2023" />
                        </VBox>
                    </HBox>

                    <HBox spacing="10.0" GridPane.rowIndex="1">
                        <Glyph fontFamily="FontAwesome" icon="MAP_MARKER" style="-fx-text-fill: #999; -fx-font-size: 18px;" />
                        <VBox>
                            <Label style="-fx-text-fill: #777; -fx-font-size: 13px;" text="Ubicación" />
                            <Label fx:id="lblUbicacion" style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Estante A-1" />
                        </VBox>
                    </HBox>
                    <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Glyph fontFamily="FontAwesome" icon="CUBE" style="-fx-text-fill: #999; -fx-font-size: 18px;" />
                        <VBox>
                            <Label style="-fx-text-fill: #777; -fx-font-size: 13px;" text="Estado Físico" />
                            <Label fx:id="lblEstadoFisico" style="-fx-padding: 4 10; -fx-background-radius: 12; -fx-font-size: 12px; -fx-font-weight: bold;" text="Bueno" />
                        </VBox>
                    </HBox>
                </GridPane>

                <VBox spacing="10.0">
                    <HBox spacing="10.0">
                        <Glyph fontFamily="FontAwesome" icon="FILE_TEXT_O" style="-fx-text-fill: #999; -fx-font-size: 18px;" />
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Sinopsis" />
                    </HBox>
                    <Label fx:id="lblSinopsis" style="-fx-text-fill: #555; -fx-line-spacing: 1.2;" text="Descripción detallada del libro..." wrapText="true" VBox.vgrow="ALWAYS" />
                </VBox>

                <VBox spacing="10.0">
                    <HBox spacing="10.0">
                        <Glyph fontFamily="FontAwesome" icon="USERS" style="-fx-text-fill: #999; -fx-font-size: 18px;" />
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Préstamos Actuales" />
                    </HBox>
                    <Label style="-fx-text-fill: #999; -fx-font-style: italic; -fx-padding: 10 0 0 30;" text="No hay préstamos activos para este libro." />
                </VBox>

            </VBox>
        </ScrollPane>
    </HBox>
</VBox>