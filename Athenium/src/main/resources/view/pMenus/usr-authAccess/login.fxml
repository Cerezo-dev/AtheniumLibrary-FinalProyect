<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!--
  1. El AnchorPane raíz ahora tiene la clase 'root-glass-login' que tendrá la imagen de fondo.
  2. La ruta del CSS se ha actualizado para apuntar a un archivo de tema.
-->
<AnchorPane prefHeight="600.0" prefWidth="450.0" styleClass="root-glass-login"
            stylesheets="@../../../css/Themes/glass/UserAuth/login-style.css"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.athenium.usuario.controller.LoginController">
    <children>

        <!-- 2. Este VBox es el panel de "vidrio difuminado" -->
        <VBox alignment="TOP_CENTER" layoutX="45.0" layoutY="50.0" prefHeight="500.0" prefWidth="360.0" spacing="15.0" styleClass="glass-pane" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="50.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>

                <!-- 3. Todo el contenido va DENTRO del panel de vidrio -->
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label style="-fx-font-weight: bold;" text="Dark Mode" textFill="WHITE" />
                    <ToggleButton styleClass="toggle-button-dark-mode" />
                </HBox>

                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="USERS" size="4em" />
                        <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Bienvenido" textFill="WHITE" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </VBox>

                <VBox spacing="20.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-group">
                            <children>
                                <FontAwesomeIconView fill="WHITE" glyphName="USER" size="1.2em" styleClass="input-icon" />
                                <TextField fx:id="txtEmail" promptText="Email Universitario" styleClass="text-field-glass" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-group">
                            <children>
                                <FontAwesomeIconView fill="WHITE" glyphName="KEY" size="1.2em" styleClass="input-icon" />
                                <PasswordField fx:id="txtClave" promptText="Contraseña" styleClass="text-field-glass" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <Button onAction="#handleForgetPassword" styleClass="button-forget-password" text="¿Olvidaste tu contraseña?" HBox.hgrow="ALWAYS" />
                    </children>
                </VBox>

                <Label fx:id="lblStatus" alignment="CENTER" maxWidth="Infinity" style="-fx-font-weight: bold;" wrapText="true" />

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="10.0">
                    <children>
                        <Button onAction="#login" styleClass="button-solid-primary" text="Login" maxWidth="Infinity" />
                        <Button onAction="#loginAdmin" styleClass="button-outline-primary" text="Admin Login" maxWidth="Infinity" />
                        <Hyperlink alignment="CENTER" onAction="#redirectToRegister" styleClass="hyperlink-light" text="¿No tienes cuenta? Regístrate aquí" maxWidth="Infinity" />
                        <Button onAction="#cerrar" styleClass="btn-cerrar-app" text="Cerrar" maxWidth="Infinity" />
                    </children>
                </VBox>

            </children>
        </VBox>

    </children>
</AnchorPane>