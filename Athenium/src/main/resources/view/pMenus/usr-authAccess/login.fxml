<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<AnchorPane prefHeight="600.0" prefWidth="450.0" styleClass="root-dark" stylesheets="@../../../css/Themes/default/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.athenium.usuario.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_RIGHT" layoutX="14.0" layoutY="14.0" spacing="10" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
            <Label style="-fx-font-weight: bold;" text="Dark Mode" textFill="WHITE" />
            <ToggleButton styleClass="toggle-button-dark-mode" />
        </HBox>

        <VBox alignment="CENTER" layoutY="60.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <FontAwesomeIconView fill="WHITE" glyphName="USERS" size="5em" />
        </VBox>

        <VBox layoutY="200.0" spacing="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <FontAwesomeIconView fill="WHITE" glyphName="USER" size="1.5em" />
                <VBox HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px;" text="Username" textFill="#999999" />
                    <TextField fx:id="txtEmail" promptText="Enter your email" styleClass="text-field-dark" />
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <FontAwesomeIconView fill="WHITE" glyphName="KEY" size="1.5em" />
                <VBox HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px;" text="Password" textFill="#999999" />
                    <PasswordField fx:id="txtClave" promptText="Enter your password" styleClass="text-field-dark" />
                </VBox>
                <Button onAction="#handleForgetPassword" styleClass="button-forget-password" text="Forget" />
            </HBox>

            <Label fx:id="lblStatus" alignment="CENTER" maxWidth="Infinity" style="-fx-font-weight: bold;" wrapText="true" />
        </VBox>

        <HBox alignment="CENTER" layoutY="430.0" spacing="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <Button onAction="#loginAdmin" styleClass="button-outline-primary" text="Admin Login" />
            <Button onAction="#login" styleClass="button-solid-primary" text="Login" />
        </HBox>

        <Hyperlink alignment="CENTER" layoutX="120.0" layoutY="490.0" onAction="#redirectToRegister" styleClass="hyperlink-light" text="¿No tienes cuenta? Regístrate aquí" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />

        <Button onAction="#cerrar" styleClass="btn-cerrar-app" text="Cerrar App" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" />

    </children>
</AnchorPane>
