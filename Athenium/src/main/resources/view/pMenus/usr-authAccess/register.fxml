<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<AnchorPane prefHeight="705.0" prefWidth="450.0" styleClass="root-dark" stylesheets="@../../../css/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.athenium.usuario.controller.LoginController"> <padding>
    <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
</padding>
    <children>
        <HBox alignment="CENTER_RIGHT" layoutX="14.0" layoutY="14.0" spacing="10" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
            <Label style="-fx-font-weight: bold;" text="Dark Mode" textFill="WHITE" />
            <ToggleButton styleClass="toggle-button-dark-mode" />
        </HBox>

        <VBox alignment="CENTER" layoutY="60.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <FontAwesomeIconView fill="WHITE" glyphName="USER_PLUS" size="4em" />
            <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Crear Nueva Cuenta" textFill="WHITE" />
        </VBox>

        <VBox layoutY="200.0" spacing="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <FontAwesomeIconView fill="WHITE" glyphName="USER" size="1.5em" />
                <VBox HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px;" text="Nombre(s)" textFill="#999999" />
                    <TextField fx:id="txtNombreReg" promptText="Enter your first name" styleClass="text-field-dark" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <FontAwesomeIconView fill="WHITE" glyphName="USER" size="1.5em" />
                <VBox HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px;" text="Apellido(s)" textFill="#999999" />
                    <TextField fx:id="txtApellidoReg" promptText="Enter your last name" styleClass="text-field-dark" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <FontAwesomeIconView fill="WHITE" glyphName="ENVELOPE" size="1.5em" />
                <VBox HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px;" text="Email Universitario" textFill="#999999" />
                    <TextField fx:id="txtEmailReg" promptText="Enter your university email" styleClass="text-field-dark" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <FontAwesomeIconView fill="WHITE" glyphName="LOCK" size="1.5em" />
                <VBox HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px;" text="Contraseña" textFill="#999999" />
                    <PasswordField fx:id="txtClaveReg" promptText="Enter your password" styleClass="text-field-dark" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <FontAwesomeIconView fill="WHITE" glyphName="LOCK" size="1.5em" />
                <VBox HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px;" text="Confirmar Contraseña" textFill="#999999" />
                    <PasswordField fx:id="txtConfirmClaveReg" promptText="Confirm your password" styleClass="text-field-dark" />
                </VBox>
            </HBox>

            <Label fx:id="lblStatusReg" alignment="CENTER" maxWidth="Infinity" style="-fx-font-weight: bold;" wrapText="true" />
        </VBox>

        <Button onAction="#handleRegister" styleClass="button-solid-primary" text="Registrarse" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" />

        <Hyperlink alignment="CENTER" onAction="#redirectToLogin" styleClass="hyperlink-light" text="¿Ya tienes cuenta? Inicia sesión aquí" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />

        <Button onAction="#cerrar" styleClass="btn-cerrar-app" text="Cerrar App" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" />

    </children>
</AnchorPane>
