<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="miContenedor" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="510.0"
            prefWidth="1145.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.athenium.common.controller.LibroController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>
                <AnchorPane>
                    <children>
                        <!-- Título Corregido -->
                        <Label layoutX="14.0" layoutY="14.0" text="Gestionar Libros">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label layoutX="332.0" layoutY="41.0" text="Filtrar Libros (Título, Autor, ISBN)" />
                        <TextField fx:id="txtFiltroDato" layoutX="332.0" layoutY="61.0" prefHeight="26.0" prefWidth="250.0" />
                        <!-- El botón buscar ahora está deshabilitado, el filtro es automático -->
                        <Button layoutX="590.0" layoutY="62.0" mnemonicParsing="false" styleClass="btn, btn-lg, btn-success"
                                text="Buscar" visible="false" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" />
                    </padding></AnchorPane>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Formulario Refactorizado -->
                        <AnchorPane styleClass="panel-success" minWidth="450.0" prefWidth="450.0">
                            <children>
                                <GridPane layoutY="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0"
                                                           prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                                           prefWidth="300.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <!-- Título Formulario -->
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <!-- Título -->
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <!-- Autor -->
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <!-- ISBN -->
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <!-- Año -->
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <!-- Género -->
                                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <!-- Botones -->
                                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" /> <!-- Mensaje Error -->
                                    </rowConstraints>
                                    <children>
                                        <Label alignment="CENTER" prefHeight="18.0" prefWidth="391.0" text="Formulario de Registro" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>

                                        <!-- Campo Título (antes Nombre Producto) -->
                                        <Label text="Título" GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets left="5.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets right="5.0" />
                                            </GridPane.margin>
                                        </TextField>

                                        <!-- Campo Autor (antes P. Unit) -->
                                        <Label text="Autor" GridPane.rowIndex="2">
                                            <GridPane.margin>
                                                <Insets left="5.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <TextField fx:id="txtAutor" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                            <GridPane.margin>
                                                <Insets right="5.0" />
                                            </GridPane.margin>
                                        </TextField>

                                        <!-- Campo ISBN (antes Utilidad) -->
                                        <Label text="ISBN" GridPane.rowIndex="3">
                                            <GridPane.margin>
                                                <Insets left="5.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <TextField fx:id="txtIsbn" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                            <GridPane.margin>
                                                <Insets right="5.0" />
                                            </GridPane.margin>
                                        </TextField>

                                        <!-- Campo Año (antes Stock) -->
                                        <Label text="Año Publicación" GridPane.rowIndex="4">
                                            <GridPane.margin>
                                                <Insets left="5.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <TextField fx:id="txtAnio" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                            <GridPane.margin>
                                                <Insets right="5.0" />
                                            </GridPane.margin>
                                        </TextField>

                                        <!-- Campo Género (antes Categoria) -->
                                        <Label text="Género" GridPane.rowIndex="5">
                                            <GridPane.margin>
                                                <Insets left="5.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <ComboBox fx:id="cbxGenero" maxWidth="1.7976931348623157E308" prefHeight="26.0"
                                                  GridPane.columnIndex="1" GridPane.rowIndex="5">
                                            <GridPane.margin>
                                                <Insets right="5.0" />
                                            </GridPane.margin>
                                        </ComboBox>

                                        <!-- Botones -->
                                        <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="6" alignment="CENTER_LEFT">
                                            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                                    onAction="#validarFormulario" styleClass="btn, btn-lg, btn-primary" text="Guardar" HBox.hgrow="ALWAYS">
                                                <HBox.margin>
                                                    <Insets />
                                                </HBox.margin>
                                            </Button>
                                            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clearForm" styleClass="btn,
btn-lg, btn-danger" text="Cancelar" HBox.hgrow="ALWAYS">
                                                <HBox.margin>
                                                    <Insets />
                                                </HBox.margin>
                                            </Button>
                                        </HBox>

                                        <!-- Mensaje de Error -->
                                        <Label fx:id="lbnMsg" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                                               maxWidth="1.7976931348623157E308" text="Label" GridPane.columnSpan="2" GridPane.halignment="LEFT"
                                               GridPane.rowIndex="7" GridPane.valignment="TOP" wrapText="true">
                                            <GridPane.margin>
                                                <Insets left="5.0" top="5.0" />
                                            </GridPane.margin>
                                        </Label>
                                    </children>
                                </GridPane>
                            </children>
                        </AnchorPane>
                        <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                            <children>
                                <TableView fx:id="tableView" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
                                           AnchorPane.topAnchor="5.0" AnchorPane.bottomAnchor="0.0" />
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
